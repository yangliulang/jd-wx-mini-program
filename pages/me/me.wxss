.header{
  margin:20rpx;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  padding:50rpx 20rpx;
  background: linear-gradient(90deg,#eb3c3c,#ff7459);
  box-shadow: 0 2px 5px rgba(255,98,98,.4);
}
.header-pic{
  width: 120rpx;
  height: 120rpx;
}
.header-pic image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-info{
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  color: #fff;
}
.user-info text{
  line-height: 50rpx;
}